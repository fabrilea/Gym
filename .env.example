# ── App ───────────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=3000

# ── Database ──────────────────────────────────────────────────────────────────
# Opción recomendada para producción (Neon):
# DATABASE_URL=postgresql://user:password@ep-xxxxxxx-xxxx.region.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=
# Fuerza SSL explícito (opcional). Si usas Neon, normalmente queda true por defecto.
DATABASE_SSL=

# Opción local / fallback:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gym_db
DB_USER=gym_user
DB_PASSWORD=gym_password
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# ── JWT ───────────────────────────────────────────────────────────────────────
JWT_SECRET=supersecret_change_me
JWT_REFRESH_SECRET=refresh_supersecret_change_me
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ── Public exposure controls ────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:5173
ENABLE_SWAGGER=false

# ── Storage ───────────────────────────────────────────────────────────────────
STORAGE_PATH=./storage

# ── Throttle (rate-limit) ─────────────────────────────────────────────────────
THROTTLE_TTL=60
THROTTLE_LIMIT=10
